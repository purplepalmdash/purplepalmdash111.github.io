language: go

go:
    - 1.5.1
env:
    global:
        - SSH_KEY="deploy-key"
        - GIT_NAME="purplepalm"
        - GIT_EMAIL="purplepalm@gmail.com"
        - SOURCE_DIR="public"
        - DEPLOY_BRANCH="source"

before_install:
    - openssl aes-256-cbc -K $encrypted_b37d26c66aa0_key -iv $encrypted_b37d26c66aa0_iv -in deploy-key.enc -out deploy-key -d

before_script:
    - go get -u -v github.com/spf13/hugo

script:
    - hugo

after_success:
    - echo "purplepalmdash.github.io" > ./public/CNAME
    - "./scripts/deploy.sh"
